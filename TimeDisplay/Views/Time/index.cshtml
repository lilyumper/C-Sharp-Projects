<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Time Display</title>
    </head>
  <body>
    @{
        DateTime CurrentTime = DateTime.Now;
        var stringy = CurrentTime.ToString("MMM dd, yyyy HH:mm:ss tt");
        <div style="text-align: center;">
            <h3>The Current Time and Date:</h3>
            <p style="border: 3px solid blue; display:inline-block;"> @stringy</p>
        </div>
    }
</body>

</html>
